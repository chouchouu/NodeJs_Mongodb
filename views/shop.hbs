            var tenloaisanpham = $(this).data('pd_tl');
            var motasanpham = $(this).data('pd_code');
            var tensanpham = $(this).data('pd_name');
            var giasanpham = $(this).data('pd_price');
            var hinhsanpham =$(this).data('pd_img');

           // alert("data" + id + "  " + tenloaisanpham + "  " + motasanpham + "  " + tensanpham + "  " + giasanpham);
            $('.id').val(id);
            $('.pd-tl_').val(tenloaisanpham);
            $('.code_').val(motasanpham);
            $('.name_').val(tensanpham);
            $('.price_').val(giasanpham);
            $('img').val(hinhsanpham);

             if ($('#brandedt option:selected').length > 0) {
                $('#brandedt option:selected').removeAttr("selected");
            }
            $("#brandedt option:contains(" + tenloaisanpham +
                ")").attr('selected', 'selected');

            $("#brandedt option:contains(" + tenloaisanpham +
                ")").prop('selected', true); 



        })
    });


</script>
