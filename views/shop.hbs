    <script>

        function fSubmit() {
            var vName = fMenuDetail.name.value;
            if (vName.trim() ==""){
                $("#errName").text("* khong duoc de trong thong tin *");
                fMenuDetail.name.focus();
                return;
                
            }
            $("#errName").text();
            //gia
             var vName = fMenuDetail.price.value;
            if (vName.trim() ==""){
                $("#errPrice").text("* khong duoc de trong thong tin *");
                fMenuDetail.price.focus();
                return;
                
            }
            $("#errPrice").text();
            //mota
            var vName = fMenuDetail.describe.value;
            if (vName.trim() ==""){
                $("#errDescribe").text("* khong duoc de trong thong tin *");
                fMenuDetail.describe.focus();
                return;
                
            }
            $("#errPrice").text();
            fMenuDetail.submit();
        }
        </script>
        <script type="text/javascript">
        $(document).ready(function () {
        $('#example').DataTable();

        $('#example').on('click', '.edit', function () {


